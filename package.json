{
  "name": "smartcart",
  "version": "1.0.0",
  "description": "SmartCart - Shared Grocery List with AI-powered suggestions",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "npm run dev --workspace=@smartcart/frontend",
    "dev:backend": "npm run dev --workspace=@smartcart/backend",
    "build": "npm run build --workspace=@smartcart/shared && npm run build --workspace=@smartcart/backend && npm run build --workspace=@smartcart/frontend",
    "build:frontend": "npm run build --workspace=@smartcart/frontend",
    "build:backend": "npm run build --workspace=@smartcart/backend",
    "test": "npm run test --workspaces --if-present",
    "test:watch": "npm run test:watch --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "type-check": "npm run type-check --workspaces --if-present",
    "db:migrate": "npm run db:migrate --workspace=@smartcart/backend",
    "db:seed": "npm run db:seed --workspace=@smartcart/backend",
    "db:studio": "npm run db:studio --workspace=@smartcart/backend",
    "db:reset": "npm run db:reset --workspace=@smartcart/backend",
    "db:generate": "npm run db:generate --workspace=@smartcart/backend",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "concurrently": "^8.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/smartcart/smartcart.git"
  },
  "keywords": [
    "grocery",
    "shopping",
    "collaboration",
    "real-time",
    "household",
    "react",
    "typescript",
    "websocket"
  ],
  "author": "SmartCart Team",
  "license": "MIT"
}
